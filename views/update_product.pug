extends layout

block append head
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="/javascripts/put.js")

block content
    .container
        script.
            window.onload = function () { put('product'); }
        form#form(action="/products" method="post")
            label(for="id") ID Produktu 
            input#id(type="number" name="id")
            br
            label(for="name") Nazwa produktu 
            input#name(type="text" name="name")
            br
            label(for="category") Kategoria 
            input#category(type="text" name="category")
            br
            label(for="cost") Koszt 
            input#cost(type="number" name="cost" min=0)
            br
            input#submit(type="button" value="Submit request")